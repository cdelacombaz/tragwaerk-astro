---
import Layout from '@layouts/Layout.astro';
import Hero from '@components/sections/Hero.astro';
import SplitPanel from '@components/sections/SplitPanel.astro';
import Features from '@components/sections/Features.astro';
import { featureLists } from '@data/features';
import { statsLists } from '@data/stats';
import { logoLists } from '@data/logos';
import { faqLists } from '@data/faqs';
import heroImage from '../assets/images/home/default-hero-2.jpg';
import styleGuideImage from '../assets/images/home/developer.jpg';
import fassadeImage from '../assets/images/fassade.jpeg';
import fassadeGlasImage from '../assets/images/fassade-glas.jpg';
import nietenImage from '../assets/images/nieten.jpeg';
import dachImage from '../assets/images/dach.jpeg';
import eisenImage from '../assets/images/eisen.jpeg';
import eisenBwImage from '../assets/images/eisen-bw.jpeg';
import fassadeBetonImage from '../assets/images/fassade-beton.jpeg';
import fassadeKurvenImage from '../assets/images/fassade-kurven.jpeg';
import stuetzenImage from '../assets/images/stuetze.jpeg';
import turmImage from '../assets/images/turm.jpeg';

const seoTitle = 'Tragwärk Ingenieure und Planer GmbH | Ingenieurbüro im Kanton Freiburg und Bern';
const seoDescription =
    'Ihr Ingenieurbüro in Gurmels (FR) und Bern (BE) für Tragwerksplanung, Statik und Bauingenieurwesen. Wir planen Ihr Projekt im Hochbau, Ingenieurbau und Geotechnik. Jetzt anfragen!';

const heroContent = {
    title: 'Ihr Ingenieurbüro für Tragwerksplanung',
    description:
        'Wir entwickeln Tragwerke, die Sicherheit, Wirtschaftlichkeit und Nachhaltigkeit vereinen – für Hochbau, Infrastrukturbau und geotechnische Konstruktionen. Vom Entwurf bis zur Ausführungsplanung – wir begleiten Sie persönlich und kompetent.',
    backgroundImage: nietenImage,
    overlayOpacity: 0.7,
};

const featuresSection = {
    title: 'Dienstleistungen',
    features: featureLists.main.features,
    button: {
        text: 'View Theme Info',
        link: '/theme-info',
        variant: 'primary' as const,
    },
};

const FooterCta = {
    eyebrow: 'Join The Community',
    title: ' Start Building With Titan Core Today',
    description:
        "Titan Core is open-source and constantly improving. Join our community of developers to contribute, get support, or showcase what you've built.",
    hideCta: false,
    button: {
        text: 'Download Titan Core',
        link: 'https://github.com/rspisarski/titan-core',
        target: '_blank',
    },
};

const aboutUsSection = {
    eyebrow: 'Über Uns',
    headline: 'Wir sind ein Ingenieurbüro für Tragwerksplanung & Statik.',
    description:
        'Als regionales Bauingenieurbüro sind wir spezialisiert auf moderne Tragwerksplanung für Hochbau, Kunstbauten und Geotechnik. Unser junges Team kombiniert frisches Know-how mit mehrjähriger Erfahrung aus remontierten Ingenieurbüros. Persönliche Beratung, effiziente Lösungen und zuverlässige Projektbetreuung stehen bei uns im Mittelpunkt. Wir freuen uns darauf, Ihr Bauvorhaben von der ersten Idee bis zur Fertigstellung zu begleiten.',
    image: {
        src: stuetzenImage,
        alt: 'Featured image',
    },
};

const portFolioSection = {
    eyebrow: 'Portfolio',
    headline: 'Unsere Projekte',
    description:
        'Ob Wohnhäuser, Gewerbebauten, Brücken oder Baugrubensicherungen – wir bringen unser technisches Know-how in vielfältige Projekte ein. ',

    list: {
        title: 'Unser Portfolio umfasst unter anderem:',
        items: [
            'Effiziente Tragwerksplanung für Neubauten und Sanierungen',
            'Konstruktion von Stahl-, Holz- und Massivbauten',
            'Planung und Bemessung von Brücken und Stützmauern',
            'Geotechnische Lösungen wie Spund- und Bohrpfahlwände',
        ],
    },
    image: {
        src: eisenBwImage,
        alt: 'Featured image',
    },
};
---

<Layout footerCta={FooterCta} title={seoTitle} description={seoDescription}>
    <Hero content={heroContent} />
    <Features content={featuresSection} padding="base" background="base" />
    <SplitPanel content={aboutUsSection} imagePosition="right" background="light" padding="base" anchorId="ueber-uns" />
    <SplitPanel content={portFolioSection} imagePosition="left" background="base" padding="base" anchorId="portfolio" />
</Layout>
